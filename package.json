{
  "version": "1.3.4",
  "scripts": {
    "changelog": "conventional-changelog -p angular -u -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "commitizen": "^4.2.5",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-custom-config": "^0.3.1",
    "conventional-changelog-emoji": "^0.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "title": "✨ Features | 新功能"
        },
        "fix": {
          "title": "🐛 Bug Fixes | Bug 修复"
        },
        "perf": {
          "title": "⚡ Performance Improvements | 性能优化"
        },
        "revert": {
          "title": "⏪ Reverts | 回退"
        },
        "chore": {
          "title": "🎫 Chores | 其他更新"
        },
        "docs": {
          "title": "📝 Documentation | 文档"
        },
        "style": {
          "title": "💄 Styles | 风格",
          "hidden": true
        },
        "refactor": {
          "title": "♻ Code Refactoring | 代码重构"
        },
        "test": {
          "title": "✅ Tests | 测试"
        },
        "build": {
          "title": "👷‍ Build System | 构建"
        },
        "ci": {
          "title": "🔧 Continuous Integration | CI 配置"
        }
      }
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  }
}
